<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/idnomArticle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:padding="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/white"
        android:text="Nom"
        android:background="@drawable/background"/>

    <TextView
        android:id="@+id/idprixArticle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@drawable/background"
        android:padding="2dp"
        android:text="prix"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/idnomArticle"
        app:layout_constraintStart_toStartOf="@+id/idnomArticle"
        app:layout_constraintTop_toBottomOf="@+id/idnomArticle" />

</androidx.constraintlayout.widget.ConstraintLayout>